{
	"name": "@yemreak/yt-dlp",
	"version": "1.1.2",
	"description": "Downloading videos and subtitles using yt-dlp, with utilities for extracting text from subtitles",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"type": "module",
	"scripts": {
		"start": "tsc --project tsconfig.json && node out/app.js",
		"build": "tsc --project tsconfig.json",
		"test": "node --experimental-vm-modules ./node_modules/.bin/jest",
		"prepublishOnly": "npm run build"
	},
	"files": [
		"dist/**/*"
	],
	"publishConfig": {
		"access": "public"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"silent": true,
		"extensionsToTreatAsEsm": [
			".ts"
		],
		"moduleNameMapper": {
			"^(\\.{1,2}/.*)\\.js$": "$1"
		},
		"transform": {
			"^.+\\.ts$": [
				"ts-jest",
				{
					"useESM": true
				}
			]
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/yemreak/yt-dlp.git"
	},
	"keywords": [
		"yt-dlp",
		"youtube-dl",
		"yt-dlp-wrapper",
		"youtube-dl-wrapper",
		"video-download",
		"subtitles"
	],
	"author": "yemreak",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/yemreak/yt-dlp/issues"
	},
	"homepage": "https://github.com/yemreak/yt-dlp#readme",
	"devDependencies": {
		"@types/jest": "^29.5.12",
		"jest": "^29.7.0",
		"ts-jest": "^29.1.2",
		"typescript": "^5.4.5"
	},
	"dependencies": {
		"node-fetch": "^3.3.2"
	}
}
